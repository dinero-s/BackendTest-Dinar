{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testRegex": "(/.*|(\\.|/))(e2e-spec)\\.[jt]s$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ]
}
